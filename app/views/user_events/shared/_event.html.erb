<div class="row align-middle columns text-center event">
  <div class="small-1 columns">
    <div class<%="circle #{event.event_type}-event" %>>
    </div>
  </div>
  <div class="small-2 columns">
    <%= link_to event.title, event_path(event) %>
  </div>
  <div class="small-5 columns">
    <%= event.date %>
  </div>
  <% if current_user.id == event.user_id %>
    <div class="small-2 columns">
      <%= link_to 'Edit', edit_event_path(event), class: 'small button' %>
    </div>
    <div class="small-2 columns">
      <%= link_to 'Delete', event_path(event), class: 'small button alert', method: :delete %>
    </div>
  <% else %>
    <div class="small-4 columns">
      <div class="small invisible button">
      </div>
    </div>
  <% end %>
</div>
