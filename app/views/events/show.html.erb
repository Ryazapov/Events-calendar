<div class="row">
  <div class="small-4 columns text-center">
    Title:
  </div>
  <div class="small-6 columns">
    <%= event.title %>
  </div>
  <div class="small-2 columns">
    <%= link_to 'edit', edit_event_path(event) if current_user.id == event.user_id %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns text-center">
    Author:
  </div>
  <div class="small-8 columns">
    <%= link_to event.user.email, events_path(event.user_id) %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns text-center">
    Type:
  </div>
  <div class="small-8 columns">
    <%= event.event_type %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns text-center">
    Date:
  </div>
  <div class="small-8 columns">
    <%= event.date %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns text-center">
    Description:
  </div>
  <div class="small-8 columns">
    <%= event.description %>
  </div>
</div>
