<div class="row">
  <div class="large-8 large-centered medium-10 medium-centered small-12 columns">
    <%= simple_form_for event,
            as: event,
            url: url do |f| %>
      <legend>
        <%= "#{action} your " %>
      </legend>
      <strong>
        Event
      </strong>

      <div class="form-inputs">
        <%= f.input :title, required: true, autofocus: true %>
        <%= f.input :event_type, collection: Event.event_types, default: Event.event_types.first %>
        <!-- <%= f.input :start_date, required: true, as: :datepicker, autocomplete: "off" %>
        <% if event.event_type.nil? || event.once? %>
          <%= f.input :end_date, as: :datepicker, wrapper_html: {class: 'hide'} %>
        <% else %>
          <%= f.input :end_date, as: :datepicker %>
        <% end %> -->
        <%= f.input :description, as: :text %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, action %>
      </div>
    <% end %>
  </div>
</div>
