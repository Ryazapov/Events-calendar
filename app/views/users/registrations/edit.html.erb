<div class="large-8 large-centered medium-10 medium-centered small-12 columns">
  <div class="row">
    <div class="small-12 columns">
      <%= simple_form_for resource,
          as: resource_name,
          url: registration_path(resource_name),
          html: { method: :put } do |f| %>
        <legend>
         Edit your
          <strong>
            account
          </strong>
        </legend>

        <div class="form-inputs">
          <%= f.input :full_name, autofocus: true, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :current_password, autocomplete: "off" %>
          <%= f.input :password, autocomplete: "off", required: false %>
          <%= f.input :password_confirmation, autocomplete: "off", required: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>
    </div>
    <div>
      <h6>Cancel my account</h6>
      <p>
        Unhappy?
        <%= link_to "Cancel my account.",
            registration_path(resource_name),
            data: { confirm: "Are you sure?" },
            method: :delete%>
      </p>
    </div>
  </div>
</div>
