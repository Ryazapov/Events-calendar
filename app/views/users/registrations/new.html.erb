<div class="large-8 large-centered medium-10 medium-centered small-12 columns">
  <div class="row">
    <div class="small-12 columns">
      <%= simple_form_for resource,
          as: resource_name,
          url: registration_path(resource_name) do |f| %>
        <legend>
          Create your
          <strong>
            account
          </strong>
        </legend>

        <div class="form-inputs">
          <%= f.input :email, autofocus: true, required: true %>
          <%= f.input :password, autocomplete: "off", required: true %>
          <%= f.input :password_confirmation, autocomplete: "off", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
